<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".A1Step2Sections">

    <LinearLayout
        android:layout_width="299dp"
        android:layout_height="498dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/pannel_blue"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="@string/step2"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/textViewA1Step2Section1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_blue"
            android:padding="10dp"
            android:text="@string/section_1_a1_string"
            android:textColor="@color/colorButton"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewA1Step2Section2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue"
            android:padding="10dp"
            android:text="@string/section_2_a1_string"
            android:textColor="@color/colorButton"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/textViewA1Step2Section3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue"
            android:padding="10dp"
            android:text="@string/section_3_a1_string"
            android:textColor="@color/colorButton"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/textViewA1Step2Section4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue"
            android:padding="10dp"
            android:text="@string/section_4_a1_string"
            android:textColor="@color/colorButton"
            android:textSize="30sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textViewA1Step2ExitStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue"
            android:padding="10dp"
            android:text="@string/exit_step"
            android:textColor="@color/colorButton"
            android:textSize="24sp"
            android:layout_marginTop="25dp"/>

    </LinearLayout>
</LinearLayout>