<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorBackground">
    <LinearLayout
        android:layout_width="347dp"
        android:layout_height="630dp"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:text="@string/revision"
            ></TextView>
        <TextView
            android:background="@drawable/pannel_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_a_b_c_d"
            android:textColor="@color/colorPrimary"
            android:textSize="35dp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/pannel_blue"
            android:paddingVertical="15dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="36dp"
                    android:layout_marginEnd="15dp"
                    android:text="@string/I"></TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDarkRed2"
                        android:textSize="27dp"
                        android:text=""
                        android:id="@+id/text_show"
                        />
                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="3dp"
                        android:id="@+id/img_line"
                        android:background="@color/colorPrimaryDark"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:visibility="invisible"
                    android:id="@+id/imgCorrect"
                    android:layout_marginStart="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="33dp"
                    android:gravity="center"
                    android:text="@string/Adam_and_his_sister"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="33dp"
                    android:gravity="center"
                    android:text="@string/two_days_ago"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="33dp"
                    android:layout_marginEnd="15dp"
                    android:text="@string/dot"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/pannel_blue"
            android:paddingVertical="15dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/btnA"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/letterA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="@string/A"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30dp"></TextView>

                    <TextView
                        android:id="@+id/textA"
                        android:layout_width="75dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="@string/seen"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnB"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/letterB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="@string/B"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30dp"></TextView>

                    <TextView
                        android:id="@+id/textB"
                        android:layout_width="75dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="@string/told"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30dp"></TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/btnC"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/letterC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="@string/C"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30dp"></TextView>

                    <TextView
                        android:id="@+id/textC"
                        android:layout_width="72dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:text="@string/met"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/btnD"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30dp"
                        android:text="@string/D"
                        android:id="@+id/letterD"
                        android:layout_marginEnd="4dp"
                        ></TextView>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="45dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30dp"
                        android:gravity="center"
                        android:text="@string/went"
                        android:id="@+id/textD"
                        ></TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="15dp"
                android:paddingHorizontal="20dp"
                android:id="@+id/btnPrevious"
                >
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/button_blue"
                android:paddingVertical="15dp"
                android:id="@+id/btnNext"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButton"
                    android:textSize="30dp"
                    android:text="@string/next"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButton"
                    android:textSize="20dp"
                    android:text="@string/next_arrows"
                    android:layout_marginStart="15dp"
                    ></TextView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:gravity="center"
            android:background="@drawable/button_blue"
            android:textColor="@color/colorButton"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:text="@string/Exit"
            ></TextView>

    </LinearLayout>
</LinearLayout>