<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="347dp"
        android:layout_height="615dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_2_a1_string"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/pannel_blue"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/choose_the_correct"
                android:textColor="@color/colorPrimary"
                android:textSize="33dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/past_form_of_the_verb"
                android:textColor="@color/colorPrimary"
                android:textSize="33dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="278dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/pannel_blue"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hurt"
                android:textColor="@color/colorBlack"
                android:textSize="36dp"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="92dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textWrong1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/heart"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="36dp"></TextView>

                    <ImageView
                        android:id="@+id/imgWrong1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/button_red"
                        android:src="@drawable/img_cross"
                        android:visibility="invisible"></ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="105dp"
                    android:layout_height="92dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textWrong3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/heard"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="36dp"></TextView>

                    <ImageView
                        android:id="@+id/imgWrong3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/img_cross"
                        android:background="@drawable/button_red"
                        android:visibility="invisible"></ImageView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="92dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textWrong2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hut"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="36dp"></TextView>

                    <ImageView
                        android:id="@+id/imgWrong2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/button_red"
                        android:src="@drawable/img_cross"
                        android:visibility="invisible"></ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textCorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hurt"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="36dp"></TextView>

                    <ImageView
                        android:id="@+id/imgCorrect"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/img_tick"
                        android:background="@drawable/button_green"
                        android:visibility="invisible"></ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnPrevious"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_blue"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/previous_arrows"
                    android:textColor="@color/colorButton"
                    android:textSize="30dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/previous"
                    android:textColor="@color/colorButton"
                    android:textSize="25dp"></TextView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_blue"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="@string/Exit"
            android:textColor="@color/colorButton"
            android:textSize="30dp"></TextView>

    </LinearLayout>
</LinearLayout>