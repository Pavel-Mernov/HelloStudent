<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorBackground">
    <LinearLayout
        android:layout_width="347dp"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:text="@string/section_2_a1_string"
            ></TextView>
        <TextView
            android:background="@drawable/pannel_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_correct_word"
            android:textColor="@color/colorPrimary"
            android:textSize="35dp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/pannel_blue"
            android:paddingVertical="15dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="36dp"
                android:text="@string/say"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30dp"
                        android:text="@string/sayd"
                        android:id="@+id/textWrong1"
                        ></TextView>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:visibility="invisible"
                        android:id="@+id/imgWrong1"
                        android:src="@drawable/img_cross"
                        android:background="@drawable/button_red"
                        ></ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30dp"
                        android:text="@string/saed"
                        android:id="@+id/textWrong2"
                        ></TextView>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:visibility="invisible"
                        android:id="@+id/imgWrong2"
                        android:src="@drawable/img_cross"
                        android:background="@drawable/button_red"
                        ></ImageView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="135dp"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30dp"
                        android:text="@string/said"
                        android:id="@+id/textCorrect"
                        ></TextView>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:visibility="invisible"
                        android:id="@+id/imgCorrect"
                        android:src="@drawable/img_tick"
                        android:background="@drawable/button_green"
                        ></ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30dp"
                        android:text="@string/sait"
                        android:id="@+id/textWrong3"
                        ></TextView>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:visibility="invisible"
                        android:id="@+id/imgWrong3"
                        android:src="@drawable/img_cross"
                        android:background="@drawable/button_red"
                        ></ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="100dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/button_blue"
                android:paddingVertical="15dp"
                android:paddingHorizontal="20dp"
                android:id="@+id/btnPrevious"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButton"
                    android:textSize="20dp"
                    android:text="@string/previous_arrows"
                    android:layout_marginEnd="15dp"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButton"
                    android:textSize="30dp"
                    android:text="@string/previous"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/button_blue"
                android:paddingVertical="15dp"
                android:id="@+id/btnNext"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButton"
                    android:textSize="30dp"
                    android:text="@string/next"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButton"
                    android:textSize="20dp"
                    android:text="@string/next_arrows"
                    android:layout_marginStart="15dp"
                    ></TextView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:gravity="center"
            android:background="@drawable/button_blue"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorButton"
            android:textSize="30dp"
            android:text="@string/Exit"
            ></TextView>

    </LinearLayout>
</LinearLayout>